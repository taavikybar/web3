{
    "files": {
        "include": "lib/scss/**/*.s+(a|c)ss"
    },
    "rules": {
        "indentation": [
            2,
            {
                "size": 2
            }
        ],
        "no-important": 2,
        "class-name-format": [
            2,
            {
                "convention": "hyphenatedbem"
            }
        ],
        "variable-name-format": 0,
        "property-sort-order": 0,
        "no-vendor-prefixes": 0,
        "no-color-literals": 0,
        "shorthand-values": 2,
        "final-newline": 0,
        "leading-zero": 2,
        "force-pseudo-nesting": 0,
        "pseudo-element": 2,
        "no-trailing-whitespace": 2,
        "no-empty-rulesets": 2,
        "mixins-before-declarations": 0,
        "zero-unit": 2,
        "no-css-comments": 2,
        "empty-line-between-blocks": 2,
        "empty-args": 2,
        "space-before-brace": 2,
        "force-element-nesting": 2,
        "nesting-depth": [
            2,
            {
                "max-depth": 3
            }
        ],
        "single-line-per-selector": 0,
        "no-ids": 0
    }
}
